@section HeaderStyling{
    <script src="https://kit.fontawesome.com/e1303a18ed.js" crossorigin="anonymous"></script>
    <style>



        .headerHeading {
            color: #fff !important;
        }

        .errspan {
            float: right;
            margin-right: 8px;
            margin-top: -32px;
            position: relative;
            z-index: 2;
            color: red;
            cursor: pointer;
            display: none;
        }


        input.input-validation-error {
            border: 0.083em solid red;
        }

        select.input-validation-error {
            border: 0.083em solid red;
        }


        /* Bootstrap 4 text input with search icon */

        .has-search .form-control {
            padding-left: 2.375rem;
        }

        .has-search .form-control-feedback {
            position: absolute;
            z-index: 2;
            display: block;
            width: 2.375rem;
            height: 2.375rem;
            line-height: 2.375rem;
            text-align: center;
            pointer-events: none;
            color: #aaa;
        }

        .img {
            border-radius: 50%;
            height: 40px;
            width: 40px;
        }

        .pera {
            color: rgba(0, 0, 0, 0.8);
        }

        .link {
            color: #afa939;
        }

        .redboarder {
            border: 1px solid red;
        }

        .datespan {
            display: inline-block;
            color: #808080;
            text-align: left;
            margin-left: 10px;
        }

        .emailspan {
            display: block;
            color: #808080;
            text-align: left;
        }

        label {
            line-height: 1.2;
        }

        .circular_btn button {
            border-radius: 50%;
            border: 1px solid transparent;
            height: 30px;
            width: 30px;
            margin: 3px;
        }

        .circular_btn i {
            color: white;
        }

        .custom-control {
            border: 1px solid #ced4da;
            border-radius: 4px;
            font-size: 14px;
            text-align: left;
            width: 100%;
            height: 40px;
        }
    </style>
}


