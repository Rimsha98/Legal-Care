
@{
    ViewBag.Title = "New_Admin";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

@section register{
    <link href="~/Content/bootstrap330.min.css" rel="stylesheet" id="bootstrap-css" />
    <script src="~/Scripts/bootstrap330.min.js"></script>
    <script src="~/Scripts/jquery1111.min.js"></script>
    <script src="~/Scripts/jquery191.min.js"></script>
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />

    <style>
        .form-group {
            width: 80%;
        }

            .form-group label {
                font-weight: normal;
            }

        .radio-label {
            vertical-align: top;
            margin-top: 8px;
            margin-left: 8px;
            margin-right: 8px;
        }

        .profile-pic {
            width: 175px;
            height: 175px;
            object-fit: cover;
        }

        #Roles {
            width: 100%;
        }

            #Roles tr td {
                width: 50%;
            }

        .mybuttons {
            height: 30px;
            width: 175px;
            border: none;
            cursor: pointer;
            outline: none;
            background-color: #AFA939;
            color: #fff;
            border-radius: 4px;
        }

            .mybuttons:hover {
                background-color: #ded871;
            }

        .cancel {
            background-color: #222831;
        }

            .cancel:hover {
                background-color: #505050;
            }
    </style>
}

<section>
    <div class="row pb-4" style="background-color: #F8F9FA;">
        <div class="col-md-4 mt-2 mb-2">
            <div class="search-bar">
                <input type="text" placeholder="enter text to search ..." class="float-left" />
                <button type="button" class="float-left search-btn"> <i class="fas fa-search"> </i> </button>
            </div>
        </div>
        <div class="col-md-8 mt-2 mb-2 center">
            <button class="buttons btn1 float-right w-25" onclick="location.href='/admins/all_admins'">Back</button>
        </div>
    </div>

    <div class="sub-content" style="text-align: left;">
        <div class="row p-5">
            <div class="col-lg-6 p-2">
                <div class="form-group mb-3">
                    <label>Full Name</label>
                    <input type="text" class="custom-control" placeholder="enter admin's full name" />
                </div>
                <div class="form-group mb-3">
                    <label>Email ID</label>
                    <input type="text" class="custom-control" placeholder="enter admin's email ID" />
                </div>
                <div class="form-group mb-3">
                    <label>Password</label>
                    <input type="text" readonly="readonly" class="custom-control" placeholder="234234234" />
                    <label style="color: red">*Password is generated by the system.</label>
                </div>
                <div class="form-group mb-3">
                    <label>Country</label>
                    <select class="custom-control">
                        <option selected="selected">select admin's country</option>
                        <option>Pakistan</option>
                        <option>Afghanistan</option>
                        <option>Bangladesh</option>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label>City</label>
                    <input type="text" class="custom-control" placeholder="enter admin's city" />
                </div>
                <div class="form-group mb-3 ">
                    <label>Mobile Number</label>
                    <div style="width: 100%; overflow: hidden">
                        <div class="float-left" style="width: 15%">
                            <input type="text" class="custom-control ronly" readonly="readonly" placeholder="+00" />
                        </div>
                        <div class="float-left" style="width: 85%">
                            <input type="text" class="custom-control inp" />
                        </div>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label>Gender</label><br />
                    <input type="radio" name="gender" class="form-radio" checked="checked" /><label class="radio-label">Male</label>
                    <input type="radio" name="gender" class="form-radio" /><label class="radio-label">Female</label>
                    <input type="radio" name="gender" class="form-radio" /><label class="radio-label">Other</label>
                </div>
            </div>
            <div class="col-lg-6 p-2">
                <div class="form-group mb-3">
                    <label>Select Admin's role</label><br />
                    <table id="Roles">
                        <tr>
                            <td><input type="radio" name="role" class="form-radio" checked="checked" /><label class="radio-label"> Articles</label><br /></td>
                            <td><input type="radio" name="role" class="form-radio" /><label class="radio-label"> Contact</label><br /></td>


                        </tr>

                        <tr>
                            <td><input type="radio" name="role" class="form-radio" /><label class="radio-label"> Blog</label><br /></td>
                            <td><input type="radio" name="role" class="form-radio" /><label class="radio-label"> Site Info</label><br /></td>


                        </tr>

                        <tr>
                            <td><input type="radio" name="role" class="form-radio" /><label class="radio-label"> Newsletter</label><br /></td>
                            <td><input type="radio" name="role" class="form-radio" /><label class="radio-label"> Feedback</label></td>
                        </tr>

                        <tr>
                            <td colspan="2"><input type="radio" name="role" class="form-radio" /><label class="radio-label"> Consultation</label></td>

                        </tr>
                    </table>







                </div>
                <div class="form-group mt-5 mb-3">
                    <label>Admin's Image</label><br />
                    <img src="~/images/Default Image.png" id="blah" alt="user image" class="profile-pic img-thumbnail " />
                    <br />
                    <label for="imgInp" class="ChooseFile mt-4 mb-2 p-2" style="width: 175px;">Select Image</label><br />
                    <input type='file' id="imgInp" runat="server" accept=".jpg,.jpeg,.png" onchange="validateFileType()" />
                </div>

                <div class="form-group pt-5">
                    <button class="mybuttons cancel mr-3 mb-3" onclick="location.href='/admins/all_admins'">Cancel</button>
                    <button class="mybuttons">Create Account</button>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
     function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#blah').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgInp").change(function () {
            readURL(this);
        });
</script>