                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


    </div>


    @if (Session["AccountType"] == "client")
    {
        <script>
            var nav_attorney = document.getElementById("navbar_Attorney");
            var nav_client = document.getElementById("navbar_client");
            var nav_main = document.getElementById("navbar_main");
            nav_attorney.style.display = "none";
            nav_main.style.display = "none";
            nav_client.style.display = "block";
        </script>
    }
    else if (Session["AccountType"] == "attorney")
    {

        <script>
            var nav_attorney = document.getElementById("navbar_Attorney");
            var nav_client = document.getElementById("navbar_client");
            var nav_main = document.getElementById("navbar_main");
            nav_main.style.display = "none";
            nav_attorney.style.display = "block";
            nav_client.style.display = "none";
        </script>
    }
    else if (Session["AccountType"] == null)
    {
        <script>
            var nav_attorney = document.getElementById("navbar_Attorney");
            var nav_client = document.getElementById("navbar_client");
            var nav_main = document.getElementById("navbar_main");
            nav_main.style.display = "block";
            nav_attorney.style.display = "none";
            nav_client.style.display = "none";
        </script>
    }

