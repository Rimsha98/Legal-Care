
@{
    ViewBag.Title = "Admin_ContactDetail";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

@section HeaderStyling{
    <script src="https://kit.fontawesome.com/e1303a18ed.js" crossorigin="anonymous"></script>
    <style>
 .headerHeading {
            color: #fff !important;
        }

        .errspan {
            float: right;
            margin-right: 8px;
            margin-top: -32px;
            position: relative;
            z-index: 2;
            color: red;
            cursor: pointer;
            display: none;
        }


        input.input-validation-error {
            border: 0.083em solid red;
        }

        select.input-validation-error {
            border: 0.083em solid red;
        }


        /* Bootstrap 4 text input with search icon */

        .has-search .form-control {
            padding-left: 2.375rem;
        }

        .has-search .form-control-feedback {
            position: absolute;
            z-index: 2;
            display: block;
            width: 2.375rem;
            height: 2.375rem;
            line-height: 2.375rem;
            text-align: center;
            pointer-events: none;
            color: #aaa;
        }

        .img {
            border-radius: 50%;
            height: 40px;
            width: 40px;
        }

        .pera {
            color: rgba(0, 0, 0, 0.8);
        }

        .link {
            color: #afa939;
        }

        .redboarder {
            border: 1px solid red;
        }

        .datespan {
            display: block;
            color: #808080;
            text-align: left;
        }

        label {
            line-height: 1.2;
        }

        .circular_btn button {
            border-radius: 50%;
            border: 1px solid transparent;
            height: 30px;
            width: 30px;
            margin: 3px;
        }

        .circular_btn i {
            color: white;
        }

        h5{
            font-weight: bold;
        }
    </style>
}

@model IEnumerable<SeedaniLegalCare.Models.Contact>

<section>

    <div class="sub-content mb-5">
        @foreach (var c in Model)
        {



            <div class="p-5">
                <div class="row  no-gutters mb-2 pb-2">
                    <div class="col-lg-6 ">
                        <img class="img float-left" src="~/images/person_2.jpg" />
                        <label class="float-left pl-3 mt-1 font-weight-lighter " style="color: black; text-align: left;">Sent by @c.Name<span class="ml-3" style="color: #808080;">@c.Date</span><span class="datespan">@c.Email</span></label>

                    </div>

                    <div class="col-lg-6">
                        <button type="button" data-toggle="modal" title="delete" data-target="#deletemodel" class="float-right  delete-request" data-backdrop="static" data-keyboard="false"><i class="fa fa-times"></i></button>

                        <a href="@Url.Action("query_response","contact")">
                            <button type="button" class="float-right edit-button mr-3" title="respond"><i class="fas fa-envelope"></i></button>
                        </a>
                        <a href="@Url.Action("queries","contact")">
                            <button type="button" class="float-right expand-button mr-3" title="back"><i class="fa fa-angle-left "></i></button>
                        </a>


                    </div>
                </div>

                <div class="row  no-gutters">
                    <h5>@c.Subject</h5>
                    <p class="pera" style="text-align:left;">
                        @c.Message
                    </p>
                </div>
            </div>
        }


    </div>

    <!-- modals -->
    <div class="modal fade" id="deletemodel" tabindex="-1" role="dialog" aria-hidden="true" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title float-left font-weight-bold">Delete Message</h5>
                    <button class="close-modal-sm float-right" title="Close" data-dismiss="modal"><i class="fas fa-times"></i></button>
                </div>
                <div class="modal-body mt-3 center">
                    <p>Are you sure you want to delete this message?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary cancel-button" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary proceed-button">Delete</button>
                </div>
            </div>
        </div>
    </div>

</section>