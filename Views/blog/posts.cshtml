
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeaderStyling{
    <script src="https://kit.fontawesome.com/e1303a18ed.js" crossorigin="anonymous"></script>
    <style>
        .max-lines {
            display: block; /* or inline-block */
            text-overflow: ellipsis;
            word-wrap: break-word;
            overflow: hidden;
            max-height: 8em;
        }
          .has-search .form-control {
            padding-left: 2.375rem;
        }

        .has-search .form-control-feedback {
            position: absolute;
            z-index: 2;
            display: block;
            width: 2.375rem;
            height: 2.375rem;
            line-height: 2.375rem;
            text-align: center;
            pointer-events: none;
            color: #aaa;
        }


        .search-bar {
            width: 100%;
        }

            .search-bar input[type=text] {
                height: 35px;
                border-radius: 4px 0px 0px 4px;
                border: 1px solid #CED4DA;
                padding: 0px 10px;
                font-size: 14px;
                width: 85%;
            }

                .search-bar input[type=text]:focus {
                    border: 1px solid #a2a7ab;
                    outline: none;
                }

            .search-bar button {
                height: 35px;
                border: none;
                background-color: #B7B7B7;
                border-radius: 0 4px 4px 0px;
                color: #fff;
                width: 15%;
                cursor: pointer;
            }

                .search-bar button:hover {
                    background-color: #888888;
                }

                .search-bar button:focus {
                    outline: none;
                }

    
    </style>
}


<section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center">
            <div class="col-md-9 ftco-animate pb-5 text-center">
                <h1 class="mb-3 bread">Blog</h1>
                <p class="breadcrumbs"><span class="mr-2"><a href="@Url.Action("index","Home")">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Blog <i class="ion-ios-arrow-forward"></i></span></p>
            </div>
        </div>
    </div>
</section>

@model IPagedList<SeedaniLegalCare.Models.Blog>
@using PagedList;
@using PagedList.Mvc;
<section class="bg-light">

    <div class="container bg-light">
        <div class="row ">
            <div class="col-lg-8">
            </div>

            <!-- Search Bar -->
            <div class="col-lg-4 pb-4 pt-4">
                @using (Html.BeginForm("posts", "blog", FormMethod.Get))
                {
                    <div class="search-bar">
                        <input type="text" name="search" id="search" placeholder="enter text to search article..." class="float-left" />
                        <button type="submit" value="search" class="float-left search-btn"><i class="fas fa-search"></i></button>
                    </div>
                }
            </div>
        </div>

        @foreach (var art in Model)
        {
            <div class="row border no-gutters mb-4 " style="background-color: #fff;">
                <div class="col-md-4 p-4">
                    <img src="~/images/case-3.jpg" class="img-fluid" />
                </div>

                <div class="col-md-8 p-4">
                    <a href="@Url.Action("post","blog",new { Id = art.blog_Id }, null)"><h2>@art.Title</h2></a>
                    <p class="pt-2 max-lines" style="font-size: 15px;">@art.Blog_Content</p>
                    <label style="font-size: 15px;">Date posted: @art.Date</label>
                </div>
            </div>
        }


        <!-- Pagination -->
        <div>
            @Html.PagedListPager(Model, page => Url.Action("posts", new
            {
                page,
                search = Request.QueryString["search"],
            }),
            new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })
        </div>
    </div>
</section>

