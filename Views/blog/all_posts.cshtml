            z-index: 2;
            display: block;
            width: 2.375rem;
            height: 2.375rem;
            line-height: 2.375rem;
            text-align: center;
            pointer-events: none;
            color: #aaa;
        }

        .img {
            border-radius: 50%;
            height: 40px;
            width: 40px;
        }

        .pera {
            color: rgba(0, 0, 0, 0.8);
        }

        .link {
            color: #afa939;
        }

        .redboarder {
            border: 1px solid red;
        }

        .datespan {
            display: block;
            color: #808080;
            text-align: left;
        }

        label {
            line-height: 1.2;
        }

        .circular_btn button {
            border-radius: 50%;
            border: 1px solid transparent;
            height: 30px;
            width: 30px;
            margin: 3px;
        }

        .circular_btn i {
