
@{
    ViewBag.Title = "Articles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeaderStyling{
    <script src="https://kit.fontawesome.com/e1303a18ed.js" crossorigin="anonymous"></script>
    <style>
        .max-lines {
            display: block; /* or inline-block */
            text-overflow: ellipsis;
            word-wrap: break-word;
            overflow: hidden;
            max-height: 8em;
        }


        .headerHeading {
            color: #fff !important;
            font-size: 20px !important;
        }

        .errspan {
            float: right;
            margin-right: 8px;
            margin-top: -32px;
            position: relative;
            z-index: 2;
            color: red;
            cursor: pointer;
            display: none;
        }


        input.input-validation-error {
            border: 0.083em solid red;
        }

        select.input-validation-error {
            border: 0.083em solid red;
        }


        /* Bootstrap 4 text input with search icon */

        .has-search .form-control {
            padding-left: 2.375rem;
        }

        .has-search .form-control-feedback {
            position: absolute;
            z-index: 2;
            display: block;
            width: 2.375rem;
            height: 2.375rem;
            line-height: 2.375rem;
            text-align: center;
            pointer-events: none;
            color: #aaa;
        }


        .search-bar {
            width: 100%;
        }

            .search-bar input[type=text] {
                height: 35px;
                border-radius: 4px 0px 0px 4px;
                border: 1px solid #CED4DA;
                padding: 0px 10px;
                font-size: 14px;
                width: 85%;
            }

                .search-bar input[type=text]:focus {
                    border: 1px solid #a2a7ab;
                    outline: none;
                }

            .search-bar button {
                height: 35px;
                border: none;
                background-color: #B7B7B7;
                border-radius: 0 4px 4px 0px;
                color: #fff;
                width: 15%;
                cursor: pointer;
            }

                .search-bar button:hover {
                    background-color: #888888;
                }

                .search-bar button:focus {
                    outline: none;
                }

        h2 {
            font-size: 18px !important;
            font-weight: 600;
        }

            h2:hover {
                color: #afa939;
            }

        body {
            background-color: #f8f9fa !important;
        }

       .pagination > li > a {
           background-color: #fff !important;
    color: #222831 !important;
    border: 1px solid #ced4da;
    padding: 5px 7px 5px 7px;
}

.pagination > .active > a, .pagination > .active > span, .pagination > .active > a:hover,
.pagination > .active > span:hover, .pagination > .active > a:focus, .pagination > .active > span:focus {
    background-color: #AFA939 !important;
    border-color: #AFA939 !important;
    color: #fff !important;
}
    </style>
}

