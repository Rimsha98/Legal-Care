<section class="ftco-section ftco-no-pt ftco-no-pb mt-5 mb-5">

    <div class="container p-0 mb-5 " style="width: 80%; ">
        <div class="row mb-0 no-gutters w-100">
            <h1 class="section-head col-lg-3 pt-2 pb-2">General Settings</h1>
        </div>
        <div class="row mb-0 pb-5 pt-5 no-gutters w-100 settings-section border" style="background-color: #F8F9FA;">
            <div class="col-lg-5 float-left float-md-none">

                <div class="form-group mb-3" style="text-align: center">
                    <img src="~/images/Default Image.png" id="blah" alt="user image" class="profile-pic img-thumbnail " style="width: 12rem; height: 12rem" />
                    <br />
                    <label for="imgInp" class="ChooseFile mt-3 p-2" style="width: 12rem">Select Image</label><br />

                    <input type='file' id="imgInp" runat="server" name="imgInp" accept="image/png,image/jpg,image/jpeg" onchange="validateFileType()" />

                </div>
            </div>

            <div class="col-lg-7 float-left float-md-none">
                <div class="form-group ml-lg-0 mb-3 ">
                    <label>Email ID</label>
                    @* <input type="text" class="custom-control disabled" placeholder="load email here" readonly="readonly" />*@
                    @Html.EditorFor(model => model.Attorney_Email, new { htmlAttributes = new { @id = "attorney_email", @readonly = "readonly", @class = "custom-control", @placeholder = "enter your email address", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.Attorney_Email, "", new { @class = "errormessage" })

                </div>

                <div class="form-group ml-lg-0 mb-3">
                    <label>Password</label>
                    <div style="width: 100%; overflow: hidden">
                        <div class="float-left" style="width: 92%">
                            @*<input type="password" class="custom-control pass" placeholder="load password here" id="password" />*@
                            @Html.EditorFor(model => model.Attorney_Password, new { htmlAttributes = new { @id = "attorney_password", @type = "password", @class = "custom-control", @placeholder = "enter a password", @autocomplete = "off" } })
                            <label class="errormessage" id="password_error"></label>
                            @Html.ValidationMessageFor(model => model.Attorney_Password, "", new { @id = "password_message", @class = "errormessage" })

                        </div>
                        <div class="float-left" style="width: 8%">
                            <button id="toggle" class="togglebtn inp" onclick="Toggle_Password('attorney_password')"></button>
                        </div>
                    </div>
                </div>


                <div class="form-group ml-lg-0">
                    <button type="submit" onclick="Match_Password()" class="save-button p-2 float-right">
                        Verify Password
                    </button>
                </div>
            </div>

        </div>
    </div>

    @using (Html.BeginForm("settings_attorney", "accounts", FormMethod.Post))
    {
        <div class="container p-0 mb-5 " style="width: 80%;" id="attorney-settings">
            <div class="row mb-0 no-gutters w-100">
                <h1 class="section-head col-lg-3 pt-2 pb-2">Attorney Information</h1>
            </div>
            <div class="row mb-0 pb-5 pt-5 no-gutters w-100 settings-section border" style="background-color: #F8F9FA;">
                <div class="col-lg-6">
                    <div class="form-group mb-3 ">
                        <label>Full Name</label>
                        @* <input type="text" class="custom-control" placeholder="enter your full name" />*@
                        @Html.EditorFor(model => model.Attorney_Name, new { htmlAttributes = new { @class = "custom-control", @placeholder = "enter your full name", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Attorney_Name, "", new { @class = "errormessage" })

                    </div>

                    <div class="form-group mb-3">
                        <label>Date of Birth</label>
                        @* <input type="text" class="custom-control" placeholder="-- / -- / ----" />*@
                        @Html.EditorFor((model => model.Attorney_DOB), "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "custom-control", @placeholder = "-- / -- / ----", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Attorney_DOB, "", new { @class = "errormessage" })

                    </div>

                    <div class="form-group mb-3">
                        <label>Attorney Role</label>
                        <select class="custom-control" id="role" name="role" asp-validation-for="role">
