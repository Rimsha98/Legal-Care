                        @Html.ValidationMessageFor(model => model.Attorney_Role, "", new { @class = "errormessage" })

                    </div>



                </div>

                <div class="col-lg-6 align-content-center">
                    <div class="form-group mb-3 ">
                        <label>Country</label>
                        @Html.DropDownList("Country", (IEnumerable
                     <SelectListItem>)ViewBag.Country, new { @id = "country", @class = "custom-control", @onChange = "selectedText(this)" })
                        <input type="hidden" id="hdnProjectName" name="ContryName" />
                    </div>

                    <div class="form-group mb-3 ">
                        <label>City</label>
                        @* <input type="text" class="custom-control" placeholder="enter your city" />*@
                        @Html.EditorFor(model => model.Attorney_City, new { htmlAttributes = new { @class = "custom-control", @placeholder = "enter your city", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Attorney_City, "", new { @class = "errormessage" })

                    </div>



                    <div class="form-group ">
                        <label>Mobile Number</label>
                        <div style="width: 100%; overflow: hidden">
                            <div class="float-left" style="width: 15%">
                                <input name="code" id="code" type="text" class="custom-control ronly" value="+92" readonly="readonly" placeholder="+92" />
                            </div>
                            <div class="float-left" style="width: 85%">
                                @* <input type="text" class="custom-control inp" />*@
                                @Html.EditorFor(model => model.Attorney_Number, new { htmlAttributes = new { @type = "number", @class = "custom-control", @placeholder = "enter your mobile number", @autocomplete = "off" } })

                            </div>
                            @Html.ValidationMessageFor(model => model.Attorney_Number, "", new { @class = "errormessage" })

                        </div>
                    </div>


                </div>

            </div>

            <div class="row mb-0 pb-5 pt-5 no-gutters w-100 settings-section border" style="background-color: #F8F9FA;">
                <hr />
                <div class="col-lg-6">
                    <div class="form-group mb-3">
                        <label>Years of Experience</label>
                        @* <input type="text" class="custom-control" placeholder="enter the number of years of experience" />*@
                        @Html.EditorFor(model => model.Attorney_Experience, new { htmlAttributes = new { @type = "number", @class = "custom-control", @placeholder = "enter the number of years of experience", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Attorney_Experience, "", new { @class = "errormessage" })

                    </div>

                    <div class="form-group mb-3">
                        <label>Education</label>
                        @*<input type="text" class="custom-control" placeholder="what university did you go to?" />*@
                        @Html.EditorFor(model => model.Attorney_Education, new { htmlAttributes = new { @class = "custom-control", @placeholder = "what university did you go to?", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Attorney_Education, "", new { @class = "errormessage" })

                    </div>

                    <div class="form-group mb-3 ">
                        <label>Cases Handled</label>
                        @*<input type="text" class="custom-control" placeholder="enter the number of cases handled" />*@
                        @Html.EditorFor(model => model.Attorney_Cases, new { htmlAttributes = new { @type = "number", @class = "custom-control", @placeholder = "enter the number of cases handled", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Attorney_Cases, "", new { @class = "errormessage" })

                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group mb-3 ">
                        <label>Law Firm</label>
                        @*<input type="text" class="custom-control" placeholder="what law firm did you work at?" />*@
                        @Html.EditorFor(model => model.Attorney_Firm, new { htmlAttributes = new { @class = "custom-control", @placeholder = "what law firm did you work at?", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Attorney_Firm, "", new { @class = "errormessage" })

                    </div>

                    <div class="form-group mb-3 ">
                        <label>Languages</label>
                        @*<input type="text" class="custom-control" placeholder="enter the languages you speak" />*@
                        @Html.EditorFor(model => model.Attorney_Languages, new { htmlAttributes = new { @class = "custom-control", @placeholder = "enter the languages you speak", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Attorney_Languages, "", new { @class = "errormessage" })

                    </div>

                    <div class="form-group mb-5">
                        <label>Certification</label>
                        @*<input type="text" class="custom-control" placeholder="what certifications do you have?" />*@
                        @Html.EditorFor(model => model.Attorney_Certification, new { htmlAttributes = new { @class = "custom-control", @placeholder = "what certifications do you have?", @autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.Attorney_Certification, "", new { @class = "errormessage" })

                    </div>

                    <div class="form-group">
                        <button type="submit" class="save-button p-2 float-right">
                            Save Changes
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</section>
<div class="modal" id="changepassword" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Reset Your Password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body m-3" id="step1" style="width: 100%; overflow: hidden">
                <p>Step 1: Enter your new password</p>
                <div class="float-left" style="width: 82%">
                    <input type="password" id="newpassword" class="custom-control" placeholder="enter password" />
                    <label class="errormessage" id="savemessage"></label>
                </div>
                <div class="float-left" style="width: 8%">
                    <button id="toggle" class="togglebtn inp" onclick="Toggle_Password('newpassword')"></button>
                </div>
                @* @Html.ValidationMessage("forgotemail", "invalid email address", new { @class = "errormessage" })*@

            </div>


            <div class="modal-footer">
                <button type="button" class="btn btn-primary" name="btn" value="save" id="savechanges" onclick="SavePassword()">Save Changes</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        ScrollWindow();
        $("#code").val()($("[name='Country']").find("option:selected").val());
        $('#attorney_password').removeClass('validationerror');
        $('#password_message').removeClass('errormessage');
    });
    function ScrollWindow() {
        $("html, body").animate({ scrollTop: 650 }, 600);
    }


    $(function () {
        $("[name='Country']").change(function () {
            $("#code").val($(this).val());
        });
    });

    $("#country").on("change", function () {
        $("#hdnProjectName").val($(this).find("option:selected").text());
    });

    function Toggle_Password(Id) {
        var temp;
        temp = document.getElementById(Id);
        if (temp.type === "password") {
            temp.type = "text";
            document.getElementById("toggle").style.backgroundColor = "#e0e0e0";
        } else {
            temp.type = "password";
            document.getElementById("toggle").style.backgroundColor = "transparent";
        }
    }
</script>
@section scripts
{
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


    <script type="text/javascript">
        var SavePassword = function () {
            var password = $("#newpassword").val();
            var emailId = $("#attorney_email").val();
            $.ajax({

                type: "POST",
                datatype: "text",
                url: "/accounts/savefp_password",
                data: { password: password, emailId: emailId },
                success: function (data) {
                    var result = $.trim(data);
                    if (result === "1") {
                        //alert("save successfuly");
                        // $("#changepassword").modal('hide');


                        $('#newpassword').removeClass('validationerror');
                        $('#savemessage').text("save sucessfully")
                        $("#attorney_password").text("");
                        //$('#savemessage').innerText = "save successfully";

                    } else if (result === "0") {
                        $('#newpassword').addClass('validationerror');
                        $('#savemessage').text("password must be greater than 6")
                    }

                }

            })

        }

        var Match_Password = function () {
            var password = $("#attorney_password").val();

            $.ajax({

                type: "POST",
                datatype: "text",
                url: "/accounts/match_password",
                data: { password: password },
                success: function (data) {
                    var result = $.trim(data);
                    if (result === "1") {

                        $("#changepassword").modal('show');
                        $('#password_error').text("");

                    } else if (result === "0") {
                        //document.getElementById("password_error").innerText("wrong password");
                        $('#password_error').text("wrong password");
                    }

                }

            })

        }
    </script>
}  