             },
            success: function (response) {
                 //var basicinfo = document.getElementById("Section-1");
                 //var upimage = document.getElementById("Section-2");
                 var popup = document.getElementById("exampleModalCenter");


                    $('.active').removeClass('active');
                    $('#Step-2').addClass('active');
                    basicinfo.style.display = "none";
                    ScrollWindow();
                    upimage.style.display = "block";
                    popup.style.display = "block";

                    window.stop();

            }
        });

  return false;// if it's a link to prevent post

    }

     function ShowPopupAfterVerification(btnClicked)
{
       var $form = $(btnClicked).parents('form');


        $.ajax({
            type: "POST",
            url: "/accounts/client_registration",
           // data: $('#client').serialize() + '&' + encodeURIComponent(btnClicked.name15) + '=' + encodeURIComponent(btnClicked.value),
            data: $form.serialize() + '&' + encodeURIComponent("tabButton") + '=' + encodeURIComponent("verify"),

            error: function(xhr, status, error) {

             },
            success: function (response) {

                  var popup = document.getElementById("exampleModalCenter");


                    $('.active').removeClass('active');
                    $('#Step-2').addClass('active');
                    basicinfo.style.display = "none";
                    ScrollWindow();
                    upimage.style.display = "block";
                    popup.style.display = "block";

                   // window.stop();
               
                var load = '@Session["loadpage"]';
                if (load != "1") {
                    window.stop();
                    @{ 
                        Session["loadpage"] = "1";
                    }
                }
               

            }
        });

  return false;// if it's a link to prevent post

}



   function Verify_Step1(btnClicked)
{
       var $form = $(btnClicked).parents('form');


        $.ajax({
            type: "POST",
            url: $form.attr('action'),
           // data: $('#client').serialize() + '&' + encodeURIComponent(btnClicked.name15) + '=' + encodeURIComponent(btnClicked.value),
            data: $form.serialize() + '&' + encodeURIComponent("tabButton") + '=' + encodeURIComponent("next"),

            error: function(xhr, status, error) {
                    window.stop();
             },
            success: function (response) {
                 var basicinfo = document.getElementById("Section-1");
                 var upimage = document.getElementById("Section-2");
                var bb = '@Session["btn"]';
                if (bb == "1") {
                    $('.active').removeClass('active');
                    $('#Step-2').addClass('active');
                    basicinfo.style.display = "none";
                    ScrollWindow();
                    upimage.style.display = "block";

                    window.stop();

                    @{
                        Session["btn"] = "0";
                    }

                }



            }
        });

  return false;// if it's a link to prevent post

}


